CREATE TABLE TB_FUNCIONÁRIO 
( 
 MATRICULA INT PRIMARY KEY,  
 DATA_NASCIMENTO DATE,  
 NOME VARCHAR(n),  
 NACIONALIDADE VARCHAR(n),  
 SEXO VARCHAR(n),  
); 

CREATE TABLE TB_CARGOS 
( 
 CARGO VARCHAR(n),  
 ID_CARGO INT PRIMARY KEY,  
 idTB_CARGO_FUNCIONARIO INT,  
); 

CREATE TABLE TB_CARGO_FUNCIONARIO 
( 
 idTB_FUNCIONÁRIO INT,  
 idTB_CARGOS INT,  
 DATA_INICIO DATE,  
 DATA_FIM DATE,  
); 

ALTER TABLE TB_CARGOS ADD FOREIGN KEY(idTB_CARGO_FUNCIONARIO) REFERENCES TB_CARGO_FUNCIONARIO (idTB_CARGO_FUNCIONARIO)
ALTER TABLE TB_CARGO_FUNCIONARIO ADD FOREIGN KEY(idTB_FUNCIONÁRIO) REFERENCES TB_FUNCIONÁRIO (idTB_FUNCIONÁRIO)
ALTER TABLE TB_CARGO_FUNCIONARIO ADD FOREIGN KEY(idTB_CARGOS) REFERENCES TB_CARGOS (idTB_CARGOS)
